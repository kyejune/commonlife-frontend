<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="User">

    <select id="selectUserList" parameterType="String" resultType="userInfo">
        /* 공통게시판 리스트 조회 */
        SELECT
                *
        FROM
                USR_INFO
        LIMIT
                20
        OFFSET
                0
    </select>

    <select id="selectUserListById" parameterType="java.util.List" resultType="userInfo">
        /* 공통게시판 리스트 조회 */
        SELECT
                *
        FROM
                USR_INFO
        WHERE
                USR_ID
                IN
        <foreach collection="list" item="item" index="index" separator="," open="(" close=")">
            #{item}
        </foreach>
    </select>

    <select id="selectUserRelatedInfo" parameterType="Map" resultType="Map">
      SELECT
    </select>

</mapper>