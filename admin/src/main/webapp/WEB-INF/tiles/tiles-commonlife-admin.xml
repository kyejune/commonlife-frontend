<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
    <definition name="Layout" template="/WEB-INF/tiles/common/layout.jsp">
        <put-attribute name="header" value="/WEB-INF/tiles/common/header.jsp" />
        <put-attribute name="contents-header" value="/WEB-INF/tiles/common/contents-header.jsp" />
        <put-attribute name="left" value="/WEB-INF/tiles/common/left.jsp" />
        <put-attribute name="footer" value="/WEB-INF/tiles/common/footer.jsp" />
    </definition>

    <definition name="admin" extends="Layout">
        <put-attribute name="contents" value="/WEB-INF/jsp/views/{1}.jsp" />
        <put-attribute name="title" value="" />
        <put-attribute name="js" value="" />
        <put-attribute name="css" value="" />
        <!--<put-attribute name="title" expression="${title}" /> -->
    </definition>


    <definition name="*/manage" extends="Layout">
        <put-attribute name="manage.contents" value="/WEB-INF/jsp/views/{1}/{2}.jsp" />
        <put-attribute name="title" value="" />
        <put-attribute name="js" value="" />
        <put-attribute name="css" value="" />
        <!--<put-attribute name="title" expression="${title}" /> -->
    </definition>

    <definition name="front" extends="Layout">
        <put-attribute name="meta" value="" />
        <put-attribute name="css" value="" />
        <put-attribute name="title" value="" />
        <put-attribute name="container" value="/WEB-INF/views/{1}.jsp" />
        <put-attribute name="js" value="" />
    </definition>

    <definition name="*/front" extends="Layout">
        <put-attribute name="meta" value="" />
        <put-attribute name="css" value="" />
        <put-attribute name="title" value="" />
        <put-attribute name="container" value="/WEB-INF/views/{1}/{2}.jsp" />
        <put-attribute name="js" value="" />
    </definition>

    <definition name="*/*/front" extends="Layout">
        <put-attribute name="meta" value="" />
        <put-attribute name="css" value="" />
        <put-attribute name="title" value="" />
        <put-attribute name="container" value="/WEB-INF/views/1}/{2}/{3}.jsp" />
        <put-attribute name="js" value="" />
