    <sql id="prefixPagination">
        <if test='pagingEnable != null and pagingEnable == "1"'>SELECT RESULT_LIST.*, ROWNUM AS RNUM FROM(</if>
    </sql>

    <sql id="suffixPagination">
        <if test='pagingEnable != null and pagingEnable == "1"'>
            <!--
            <![CDATA[) RESULT_LIST WHERE ROWNUM <= #{pageIndex} + #{recordCountPerPage})ZZZ WHERE RNUM > #{pageIndex}]]>
            -->
            <![CDATA[) RESULT_LIST WHERE ROWNUM > (#{recordCountPerPage} * (#{pageIndex}-1)) AND ROWNUM <= (#{recordCountPerPage} * ((#{pageIndex}-1) + 1))  ]]>
        </if>
    </sql>

