<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Reservation">

    <select id="index" parameterType="java.util.Map" resultType="reservationInfo">
        SELECT *
        FROM   `RESERVATIONS`
        WHERE  1=1
        <choose>
            <when test='ids != null'>
                AND
                IDX IN
                <foreach collection="ids" item="id" index="index" separator="," open="(" close=")">
                    #{id}
                </foreach>
            </when>
        </choose>
        <choose>
            <when test='schemeIdx != null'>
                AND
                PARENT_IDX = #{schemeIdx}
            </when>
        </choose>
        <choose>
            <when test='startDt != null'>
                AND
                START_DT = #{startDt}
            </when>
        </choose>
        <choose>
            <when test='userId != null'>
                AND
                USR_ID = #{userId}
            </when>
        </choose>
    </select>

    <select id="show" parameterType="java.util.Map" resultType="reservationInfo">
        SELECT
        *
        FROM
        `RESERVATIONS`
        WHERE
        1=1
        AND
        `IDX` = #{idx}
    </select>

    <insert id="create" parameterType="reservationInfo">
        INSERT INTO
        `RESERVATIONS`
        (
            `PARENT_IDX`,
            `USR_ID`,
            `STATUS`,
            <choose>
                <when test='startDt != null'>
                    `START_DT`,
                </when>
            </choose>
            <choose>
                <when test='startTime != null'>
                    `START_TIME`,
                </when>
            </choose>
            <choose>
                <when test='endDt != null'>
                    `END_DT`,
                </when>
            </choose>
            <choose>
                <when test='endTime != null'>
                    `END_TIME`,
                </when>
            </choose>
            `POINT`,
            `AMOUNT`,
            `QTY`,
            `REG_DTTM`,
            `UPD_DTTM`
        )
        VALUES
  	    (
  	        #{parentIdx},
  	        #{usrID},
  	        #{status},
            <choose>
                <when test='startDt != null'>
                    #{startDt},
                </when>
            </choose>
            <choose>
                <when test='startTime != null'>
                    #{startTime},
                </when>
            </choose>
            <choose>
                <when test='endDt != null'>
                    #{endDt},
                </when>
            </choose>
            <choose>
                <when test='endTime != null'>
                    #{endTime},
                </when>
            </choose>
  	        #{point},
  	        #{amount},
  	        #{qty},
  	        CURRENT_TIMESTAMP,
  	        CURRENT_TIMESTAMP
        );

    </insert>

    <update id="update" parameterType="reservationGroupInfo">

    </update>

    <update id="delete" parameterType="reservationGroupInfo">

    </update>

</mapper>