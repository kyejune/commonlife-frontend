<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="PostFile">

    <select id="selectPostFileList" parameterType="String" resultType="postFileInfo">
        /* 공통게시판 리스트 조회 */
        SELECT
                *
        FROM
                BOARD_FILE
        LIMIT
                20
        OFFSET
                0
    </select>

    <select id="selectPostFileById" parameterType="String" resultType="postFileInfo">
        /* 공통게시판 리스트 조회 */
        SELECT
                *
        FROM
                BOARD_FILE
        WHERE
                BOARD_IDX
                IN
                ()
    </select>

</mapper>