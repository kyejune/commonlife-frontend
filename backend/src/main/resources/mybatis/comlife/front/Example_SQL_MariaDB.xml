<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Example">
    <select id="selectExampleList" resultType="ExampleInfo">
        SELECT  *
        FROM    EXAMPLE;
    </select>

    <select id="selectExample" resultType="ExampleInfo">
        SELECT  *
        FROM    EXAMPLE
        WHERE   name = #{name}
    </select>

    <insert id="insertExample" parameterType="ExampleInfo">
        INSERT
        INTO    EXAMPLE
                ( name )
        VALUES  ( #{name} )
    </insert>

    <!--
    TODO: 현재 pk가 없어서 update 처리하기가 곤란. 향후 업데이트
    <update id="updateExample" parameterType="ExampleInfo">
        UPDATE  EXAMPLE
        SET     name = #{name}
        WHERE   name = #{key}
    </update>
    -->

    <!-- TODO: 임시로 update 시 insert 처리 -->
    <update id="updateExample" parameterType="ExampleInfo">
        INSERT
        INTO    EXAMPLE
                ( name )
        VALUES  ( #{name} )
    </update>

    <delete id="deleteExample" parameterType="ExampleInfo">
        DELETE
        FROM    EXAMPLE
        WHERE   name = #{name}
    </delete>
</mapper>