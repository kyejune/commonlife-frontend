<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Example">
    <select id="selectExampleList" resultType="ExampleInfo">
        SELECT  *
        FROM    EXAMPLE;
    </select>

    <select id="selectExample" resultType="ExampleInfo">
        SELECT  *
        FROM    EXAMPLE
        WHERE   name = #{name}
    </select>

    <!-- useGeneratedKeys="true", keyProperty="id" 설정하여, 반환 값으로 auto increment된 key값(id)를 반한 합니다. -->
    <!-- 참조: https://taetaetae.github.io/2017/04/04/mybatis-useGeneratedKeys/ -->
    <insert id="insertExample" useGeneratedKeys="true" keyProperty="id" parameterType="ExampleInfo">
        INSERT
        INTO    EXAMPLE
                ( name )
        VALUES  ( #{name} )
    </insert>

    <update id="updateExample" useGeneratedKeys="true" keyProperty="id" parameterType="ExampleInfo">
        UPDATE  EXAMPLE
        SET     name = #{name}
        WHERE   id = #{id}
    </update>

    <delete id="deleteExample" parameterType="ExampleInfo">
        DELETE
        FROM    EXAMPLE
        WHERE   name = #{name}
    </delete>
</mapper>